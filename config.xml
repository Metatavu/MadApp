<?xml version='1.0' encoding='utf-8'?>
<widget id="fi.metatavu.MadApp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mikkeli Art and Design Week 2016</name>
    <description>
        Application that will be used during Mikkeli Art and Design week to inform visitors about different happenings around the city.
    </description>
    <author email="info@metatavu.fi" href="https://metatavu.fi">
        Metatavu Oy
    </author>
    <icon src="res/icon.png" />
    <icon platform="winphone" width="44"  height="44"  src="res/mad44x44.png" />
    <icon platform="winphone" width="106" height="106" src="res/mad106x106.png" />
    <icon platform="winphone" width="150" height="150" src="res/mad150x150.png" />
    <icon platform="winphone" width="360" height="360" src="res/mad360x360.png" />
    <icon platform="winphone" width="71"  height="71"  src="res/mad71x71.png" />
    <icon platform="winphone" width="170" height="170" src="res/mad170x170.png" />
    <icon platform="winphone" width="310" height="150" src="res/mad310x150.png" />
    <icon platform="winphone" width="744" height="360" src="res/mad744x360.png" />
    <icon platform="winphone" width="70"  height="70"  src="res/mad70x70.png" />
    <icon platform="winphone" width="30"  height="30"  src="res/mad30x30.png" />
    <icon platform="winphone" width="310" height="310" src="res/mad310x310.png" />
    <icon platform="winphone" width="50"  height="50"  src="res/mad50x50.png" />
    <icon platform="winphone" width="120" height="120" src="res/mad120x120.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="https://ssl.gstatic.com" />
    <access origin="https://madweek.metatavu.io" />
    <access origin="http://www.madmikkeli.com" />
    <access origin="http://*.tile.stamen.com" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <plugin name="cordova-plugin-geolocation" spec="~2.2.0" />
    <preference name="orientation" value="portrait" />
    <preference name="windows-identity-name" value="MetatavuOy.MikkeliArtandDesignWeek2016" />
</widget>