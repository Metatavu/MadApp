<?xml version='1.0' encoding='utf-8'?>
<widget id="fi.metatavu.MadApp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mikkeli Art and Design Week 2016</name>
    <description>
        Application that will be used during Mikkeli Art and Design week to inform visitors about different happenings around the city.
    </description>
    <author email="info@metatavu.fi" href="https://metatavu.fi">
        Metatavu Oy
    </author>
    <icon src="res/icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="https://ssl.gstatic.com" />
    <access origin="https://madweek.metatavu.io" />
    <access origin="http://www.madmikkeli.com" />
    <access origin="http://*.tile.stamen.com" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <plugin name="cordova-plugin-geolocation" spec="~2.2.0" />
    <preference name="orientation" value="portrait" />
    <preference name="windows-identity-name" value="MetatavuOy.MikkeliArtandDesignWeek2016" />
    <preference name="phonegap-version" value="cli-6.0.0" />
</widget>